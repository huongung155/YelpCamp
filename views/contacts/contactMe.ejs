<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 class="text-center">Contact</h1>
    </div>
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">

        <form class="form-signin" action="/contacts/send" method="post">
            <div class="form-group">
                <label for="form_name">Name</label>
                <input type="text" class="form-control" id="form_name" name="name" placeholder="Enter Name" required>
            </div>
            <div class="form-group">
                <label for="form_phone">Phone</label>
                <input type="tel" class="form-control" id="form_phone" name="phone" placeholder="Phone" required>
            </div>
            <div class="form-group">
                <label class="" for="form_email">Email</label>
                <input type="email" class="form-control" id="form_email" name="email" placeholder="Your Email Address" required>
            </div>
            <div class="form-group">
                <label class="" for="form_message">Message</label>
                <textarea class="form-control" id="form_message" name="message" placeholder="Enter Message Here" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <!-- Insert the code for the reCaptcha check box -->
                <div class="g-recaptcha" data-sitekey="6LeWhEYUAAAAAFg-60O5zE2nvlJpYummBcYQy3-s"></div>

            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Send Email</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>